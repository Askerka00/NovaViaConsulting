---
// импорт скрипта в Astro
import 'aos/dist/aos.css';
import Navbar from '../components/Main/Navbar.astro';
import Footer from '../components/Main/footer.astro'
import SubmitApplication from '../components/Main/SubmitApplication.astro';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/src/assets/images/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <Navbar />
  <body>
    <slot />
    <script>
      import AOS from 'aos';
      
      AOS.init({ duration: 800, once: true });
      
      function scrollToSection(targetId, offset = 80) {
        const element = document.getElementById(targetId);
        if (element) {
          const elementPosition = element.offsetTop - offset;
          window.scrollTo({
            top: elementPosition,
            behavior: 'smooth'
          });
        }
      }
      
      document.addEventListener('DOMContentLoaded', () => {
        document.addEventListener('click', (e) => {
          if (e.target.matches('[data-scroll-to]')) {
            e.preventDefault();
            const targetId = e.target.getAttribute('data-scroll-to');
            scrollToSection(targetId);
          }
        });
      });
    </script>
  </body>
  <SubmitApplication />
  <Footer />
</html>

<style>
  html {
    scroll-behavior: smooth;
    overflow-x: hidden;
  }
  * {
    font-family: "Montserrat", sans-serif;
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>