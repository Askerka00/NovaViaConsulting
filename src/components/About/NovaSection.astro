    }
    
    .description {
      margin-top: 15px;
    }
    
    .content hr {
      width: 60px;
      height: 1.5px;
    }
    
    .stats-container {
      gap: 30px;
    }
    
    .stat-number {
      font-size: 40px;
    }
    
    .stat-label {
      font-size: 12px;
      letter-spacing: 1px;
    }
  }

  /* Адаптив для очень маленьких экранов */
  @media (max-width: 360px) {
    .km-section {
      margin: 50px 5px 0 5px;
    }
    
    .description {
      font-size: 12px;
      line-height: 1.5;
    }
    
    .stat-number {
      font-size: 35px;
    }
    
    .stat-label {
      font-size: 11px;
    }
  }
</style>