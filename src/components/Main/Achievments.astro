---
// NovaAchievements.astro
---
<div data-aos="fade-up" class="nova-achievements">
  <h2 class="title">Достижения Nova Via Consulting</h2>
  <hr class='decor-line'>
  <div class="achievements-container">
    <div class="achievement-item">
      <div class="icon-placeholder"></div>
      <div class="achievement-text">
       <p>300+ студентов поступили в зарубежные вузы</p>
      </div>
    </div>
   
    <div class="achievement-item">
      <div class="icon-placeholder"></div>
      <div class="achievement-text">
        <p>97% положительных кейсов поступления</p>
      </div>
    </div>
  </div>
</div>

<style>
  .nova-achievements {
    width: 100%;
    height: 368px;
    background-color: #F5F5F5;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    margin-top: 160px;
    box-sizing: border-box;
  }
  .achievement-item {
    display: flex;
    align-items: center;
    text-align: left;
    gap: 30px;
    max-width: 555px;
    height: 165.53px;
    background-color: #f8f9fa;
    padding: 20px 24px;
    box-sizing: border-box;
  }
  .title {
    font-size: 30px;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
  }
  .decor-line {
    width: 228px;
    height: 2px;
    border: none;
    background-color: #F5810B;
    margin: 0 auto;
  }
  .achievements-container {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 30px;
    gap: 30px;
  }
  .icon-placeholder {
    width: 172px;
    height: 100px;
    background-color: #e9ecef;
    border-radius: 8px;
    flex-shrink: 0;
  }
  .achievement-text {
    font-size: 22px;
    font-weight: 600;
    color: #333;
    line-height: 1.2;
  }
  .description {
    font-size: 14px;
    color: #666;
    line-height: 1.3;
    font-weight: 400;
  }
  .divider-line {
    width: 1px;
    height: 60px;
    background-color: #ddd;
    flex-shrink: 0;
  }

  /* Адаптивные стили */
  @media (max-width: 1200px) {
    .nova-achievements {
      padding: 0 20px;
    }
    
    .achievement-item {
      max-width: 500px;
    }
    
    .achievements-container {
      gap: 25px;
    }
  }

  @media (max-width: 992px) {
    .nova-achievements {
      margin-top: 120px;
      height: auto;
      padding: 60px 20px;
    }
    
    .achievement-item {
      max-width: 450px;
      height: auto;
      min-height: 140px;
      padding: 18px 20px;
      gap: 25px;
    }
    
    .title {
      font-size: 28px;
    }
    
    .icon-placeholder {
      width: 140px;
      height: 80px;
    }
    
    .achievement-text {
      font-size: 20px;
    }
  }

  @media (max-width: 768px) {
    .nova-achievements {
      margin-top: 80px;
      padding: 50px 16px;
    }
    
    .achievements-container {
      flex-direction: column;
      gap: 20px;
    }
    
    .achievement-item {
      max-width: 100%;
      width: 100%;
      height: auto;
      min-height: 120px;
      padding: 16px 18px;
      gap: 20px;
    }
    
    .title {
      font-size: 26px;
    }
    
    .decor-line {
      width: 180px;
    }
    
    .icon-placeholder {
      width: 120px;
      height: 70px;
    }
    
    .achievement-text {
      font-size: 18px;
    }
  }

  @media (max-width: 480px) {
    .nova-achievements {
      margin-top: 60px;
      padding: 40px 12px;
    }
    
    .achievement-item {
      padding: 14px 16px;
      gap: 16px;
      min-height: 100px;
    }
    
    .title {
      font-size: 24px;
    }
    
    .decor-line {
      width: 150px;
    }
    
    .achievements-container {
      margin-top: 24px;
      gap: 16px;
    }
    
    .icon-placeholder {
      width: 100px;
      height: 60px;
    }
    
    .achievement-text {
      font-size: 16px;
    }
    
    .achievement-text p {
      margin: 0;
    }
  }
</style>